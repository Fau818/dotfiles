{
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": ["comment"], "settings": { "fontStyle": "bold italic" } },
      { "scope": [
        "keyword",
        "support.function",
        "support.function.builtin",
        "storage.modifier.static",
        "storage.type.struct",
        "constant.language",
      ], "settings": { "fontStyle": "italic" } },
      { "scope": [
        "keyword.control.import",
        "keyword.operator",
        // "entity.name.function",
        "support.function.any-method",
        "support.function.library",
      ], "settings": { "fontStyle": "" } }
      // { "scope": "support.function.builtin.python", "settings": { "foreground": "#FAB387" } }
    ]
  },

  "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
  "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "C_Cpp.inlayHints.referenceOperator.enabled": true,
  "C_Cpp.inlayHints.referenceOperator.showSpace": true,
  "C_Cpp.intelliSenseEngine": "disabled",
  "Lua.hint.enable": true,
  "Lua.hint.setType": true,
  "Lua.window.statusBar": false,
  "[lua]": { "editor.defaultFormatter": "sumneko.lua" },
  "diffEditor.codeLens": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.aiStats.enabled": true,
  "editor.autoIndentOnPaste": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 10,
  "editor.definitionLinkOpensInPeek": true,
  "editor.dragAndDrop": false,
  "editor.fontFamily": "SF Mono",
  "editor.fontSize": 16,
  "editor.guides.bracketPairs": "active",
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.renderFinalNewline": "dimmed",
  "editor.showFoldingControls": "always",
  "editor.smoothScrolling": true,
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.showStatusBar": true,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 200,
  "emmet.syntaxProfiles": {},
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": { "**/__pycache__": true },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "github.copilot.enable": { "plaintext": true, "scminput": true, "markdown": true },
  "github.copilot.nextEditSuggestions.enabled": false,
  "html.format.indentHandlebars": true,
  "html.format.templating": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "javascript.suggest.completeFunctionCalls": true,
  "notebook.lineNumbers": "on",
  "notebook.outline.showCodeCells": true,
  "problems.showCurrentInStatus": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.cacheLSPData": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.enableAsyncProgram": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "remote.extensionKind": { "GitHub.copilot": ["ui"], "github.copilot-chat": ["ui"] },
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.macOptionIsMeta": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.suggest.completeFunctionCalls": true,
  "vscode-neovim.compositeTimeout": 750,
  "vscode_custom_css.imports": ["file:///${HOME}/.config/vscode/multi_fonts.css"],
  "workbench.editor.mouseBackForwardToNavigate": false,
  "workbench.editorLargeFileConfirmation": 1,
  "workbench.list.multiSelectModifier": "alt",
  "workbench.list.smoothScrolling": true,
  "workbench.trustedDomains.promptInTrustedWorkspace": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "search.useGlobalIgnoreFiles": true,

  /* NEW */
}

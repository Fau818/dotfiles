							"mandatory": [ "left_shift" ],
							"optional": [ "caps_lock" ]
						}
					},
					"to": [
						{
							"key_code": "fn",
							"modifiers": [ "right_shift", "left_option" ],
							"lazy": true
						}
					]
				}
			]
		},



{
	"title": "Window Opertions",
	"rules": [
		{
			"description": "~ := ~ and <R_SHIFT><L_OPTION>(<WINKEY1>)",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "grave_accent_and_tilde",
						"modifiers": {
							"mandatory": [  ],
							"optional": [ "caps_lock" ]
						}
					},
					"to": [
						{
							"key_code": "right_shift",
							"modifiers": [ "left_option" ],
							"lazy": true
						}
					],
					"to_if_alone": [ { "key_code": "grave_accent_and_tilde" } ]
				}
			]
		},


		{
			"description": "<ESC> := <L_CTRL><SPACE> and <L_CTRL><R_SHIFT><L_OPTION>(<WINKEY2>)",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "escape",
						"modifiers": {
							"mandatory": [  ],
							"optional": [ "caps_lock" ]
						}
					},
					"to": [
						{
							"key_code": "right_shift",
							"modifiers": [ "left_option", "left_control" ],
							"lazy": true
						}
					],
					"to_if_alone": [
						{
							"key_code": "spacebar",
							"modifiers": [ "left_control" ]
						}
					]
				}
			]
		},


		{
			"description": "<L_SHIFT>~ := <FN><WINKEY1>(<WINKEY3)",
			"manipulators": [
				{
					"type": "basic",
